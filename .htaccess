# Block direct access to sensitive files and folders
<FilesMatch "^\.env$">
    Require all denied
</FilesMatch>

RewriteRule ^(config|src|db)/ - [F]

RewriteEngine On

RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

RewriteRule ^ public/index.php [L]
